<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="368dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="70dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <!--        <Button-->
        <!--            android:id="@+id/button1"-->
        <!--            android:layout_width="178dp"-->
        <!--            android:layout_height="125dp"-->
        <!--            android:layout_marginLeft="2dp"-->
        <!--            android:layout_marginRight="2dp"-->
        <!--            android:gravity="center_horizontal|center_vertical"-->
        <!--            android:text="Hello"-->
        <!--            app:backgroundTint="#4ACBDC" />-->
        <Button
            android:id="@+id/button1"
            android:layout_margin="2dp"
            android:text="Hello"
            android:tag="hello"
            android:onClick="clickFunction"
            android:textStyle="bold"
            app:backgroundTint="#4ACBDC"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_margin="2dp"
            android:text="how are\nyou?"
            android:onClick="clickFunction"
            android:tag="howareyou"
            android:textStyle="bold"
            app:backgroundTint="#E4EA749C"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:text="Please"
            android:tag="please"
            android:textStyle="bold"
            app:backgroundTint="#5AC0ED"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:text="Welcome"
            android:tag="welcome"
            android:textStyle="bold"
            app:backgroundTint="#FF9800"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:text="My name is"
            android:tag="mynameis"
            android:textStyle="bold"
            app:backgroundTint="#B29059F3"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:text="I live in"
            android:tag="ilivein"
            android:textStyle="bold"
            app:backgroundTint="#324FF1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:tag="doyouspeakenglish"
            android:text="Do you\n speak english?"
            android:textStyle="bold"
            app:backgroundTint="#C3F44336"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:layout_margin="2dp"
            android:onClick="clickFunction"
            android:tag="goodevening"
            android:text="Good evening"
            app:backgroundTint="#99DD4A"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>